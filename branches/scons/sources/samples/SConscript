import os
Import('env', 'fnd')

envsam = env.Copy()
envsam.Append(CPPPATH = ['../common/util', '..'],
	CPPDEFINES = [('funs', 'rasamples')],
	LIBPATH = '#/../../' + env['LIBARCH'], LIBS = 'rascal')

src = fnd.listFiles(['../common/util'], r'^.*(\.cc)$')

envsam.Program('raconn', src + ['01-raconn/raconn.cc'])
envsam.Program('raconns', src + ['02-raconns/test-02.cc'])
envsam.Program('rahost', src + ['04-rahost/rahost.cc'])
envsam.Program('raflood', src + ['05-raflood/raflood.cc'])
envsam.Program('ralc', src + ['06-ralc/ralc.cc'])
envsam.Program('rasvc', src + ['07-rasvc/rasvc.cc'])

